                                        <li> <a asp-controller="Hakkımızda" asp-action="Index">Hakkımızda</a> </li>
                                        <li><a asp-controller="Turlar" asp-action="Index">Turlar</a> </li>
                                        <li><a asp-controller="Iletisim" asp-action="Index">İletisim</a> </li>
                                    }


